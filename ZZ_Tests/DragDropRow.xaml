<UserControl x:Class="ZZ_Tests.DragDropRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ZZ_Tests"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800"
             
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"></ColumnDefinition>
            <ColumnDefinition Width="150"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="rowName" Grid.Column="0" FontSize="16">Name</Label>
        <Label x:Name="rowIrgendwas" Grid.Column="1" FontSize="16">Irgendwas</Label>
        <Label Grid.Column="2" FontSize="16">1</Label>
        <Label Grid.Column="3" FontSize="16">2</Label>
        <Label Grid.Column="4" FontSize="16">3</Label>
        <Label Grid.Column="5" FontSize="16">4</Label>
        <Label Grid.Column="6" FontSize="16">5</Label>
    </Grid>
</UserControl>
